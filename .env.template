# FinApp Environment Variables Template
# Copy this file to .env and update the values as needed

# Database Configuration
DATABASE_URL="postgresql://finapp_user:FinApp2025!@localhost:5432/finapp_test"
DB_HOST="localhost"
DB_PORT="5432"
DB_NAME="finapp_test"
DB_USER="finapp_user"
DB_PASSWORD="FinApp2025!"

# Server Configuration
NODE_ENV="development"
PORT="8000"
API_PREFIX="/api"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# External API Configuration
# Futu API (富途证券API)
FUTU_API_HOST="openapi.futunn.com"
FUTU_API_PORT="11111"
FUTU_API_KEY="your-futu-api-key"
FUTU_API_SECRET="your-futu-api-secret"

# Yahoo Finance API
YAHOO_FINANCE_API_KEY="your-yahoo-finance-api-key"
YAHOO_FINANCE_BASE_URL="https://query1.finance.yahoo.com"

# Exchange Rate API
EXCHANGE_RATE_API_KEY="your-exchange-rate-api-key"
EXCHANGE_RATE_BASE_URL="https://api.exchangerate-api.com/v4/latest"

# Cache Configuration
CACHE_TTL="300"  # 5 minutes
CACHE_MAX_SIZE="1000"

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE_PATH="logs/app.log"
LOG_MAX_SIZE="10MB"
LOG_MAX_FILES="5"

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@finapp.com"

# File Upload Configuration
UPLOAD_MAX_SIZE="10MB"
UPLOAD_ALLOWED_TYPES="csv,xlsx,json"

# Security Configuration
BCRYPT_ROUNDS="12"
RATE_LIMIT_WINDOW="15"  # minutes
RATE_LIMIT_MAX="100"    # requests per window

# Development Configuration
MOCK_API_URL="http://localhost:8001"
FRONTEND_URL="http://localhost:3000"

# Production Configuration (uncomment for production)
# CORS_ORIGIN="https://your-domain.com"
# SECURE_COOKIES="true"
# TRUST_PROXY="true"