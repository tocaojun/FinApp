# FinApp Frontend - Production Environment Variables
# Copy this to frontend/.env.production for production deployment

# API Configuration
# Ubuntu 服务器: 使用服务器的 IP 或域名
VITE_API_BASE_URL=http://YOUR_SERVER_IP:8000/api
# 如果使用 Nginx 反向代理，可以使用相对路径:
# VITE_API_BASE_URL=/api

# App Configuration
VITE_APP_TITLE=FinApp

# Feature Flags (Production)
VITE_ENABLE_DEBUG_PANEL=false
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Optional: Analytics
VITE_GA_MEASUREMENT_ID=

# Optional: Error tracking (Sentry)
VITE_SENTRY_DSN=

# Optional: Mock data (should be false in production)
VITE_USE_MOCK_DATA=false
