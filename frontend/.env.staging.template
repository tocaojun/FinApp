# FinApp Frontend - Staging Environment Variables
# Copy this to frontend/.env.staging and update with your staging server details

# API Configuration
VITE_API_BASE_URL=https://staging-api.yourdomain.com/api

# App Configuration
VITE_APP_TITLE=FinApp (Staging)

# Feature Flags (Staging)
VITE_ENABLE_DEBUG_PANEL=false
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Optional: Analytics
VITE_GA_MEASUREMENT_ID=

# Optional: Error tracking
VITE_SENTRY_DSN=

# Optional: Mock data (should be false in staging)
VITE_USE_MOCK_DATA=false
