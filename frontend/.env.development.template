# FinApp Frontend - Development Environment Variables
# Copy this to frontend/.env for local development

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api

# App Configuration
VITE_APP_TITLE=FinApp (Dev)

# Feature Flags (Development)
VITE_ENABLE_DEBUG_PANEL=true
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Optional: Mock data (useful for frontend-only development)
VITE_USE_MOCK_DATA=false

# Optional: Analytics (disabled in dev)
VITE_GA_MEASUREMENT_ID=

# Optional: Error tracking (disabled in dev)
VITE_SENTRY_DSN=
